---
export interface ServiceCardProps {
	title: string;
	description: string;
	link: {
		text: string;
		href: string;
	};
	icon: string; // SVG path data
}

interface Props extends ServiceCardProps {}

const { title, description, link, icon } = Astro.props;
---

<div
	class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-shadow relative overflow-hidden border border-primary"
>
	<div class="absolute inset-0 flex items-center justify-center opacity-[0.03] pointer-events-none">
		<svg class="w-64 h-64 text-primary" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
			<path d={icon}></path>
		</svg>
	</div>
	<div class="relative z-10">
		<h3 class="text-xl font-semibold mb-3">{title}</h3>
		<p class="text-gray-600 mb-4">
			{description}
		</p>
		<a href={link.href} class="text-primary font-medium hover:underline" aria-label={link.text}>
			{link.text} â†’
		</a>
	</div>
</div>
