---
export interface StatCard {
	value: number | string;
	label: string;
	color: 'primary' | 'blue' | 'green' | 'orange';
}

export interface StrategyStatsProps {
	stats: StatCard[];
}

interface Props extends StrategyStatsProps {}

const { stats } = Astro.props;

// WordPress ACF Mapping:
// ACF Group: strategy_stats
// - stats (Repeater) -> value, label, color

const colorMap = {
	primary: 'from-primary to-primary-dark',
	blue: 'from-blue to-blue/80',
	green: 'from-green to-green/80',
	orange: 'from-orange to-orange/80',
};
---

<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 mb-16">
	{
		stats.map((stat) => (
			<div
				class={`bg-gradient-to-br ${colorMap[stat.color]} text-white rounded-2xl p-6 text-center`}
			>
				<div class="text-4xl font-bold mb-2">{stat.value}</div>
				<div class="text-sm opacity-90">{stat.label}</div>
			</div>
		))
	}
</div>
