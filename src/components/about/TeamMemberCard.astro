---
export interface TeamMember {
	name: string;
	title: string;
	bio?: string;
	image: string;
	linkedin?: string;
}

export interface TeamMemberCardProps extends TeamMember {
	variant?: 'staff' | 'board' | 'advisor';
}

interface Props extends TeamMemberCardProps {}

const { name, title, bio, image, linkedin, variant = 'staff' } = Astro.props;

const gradientMap = {
	staff: 'from-primary/10 to-primary/5',
	board: 'from-primary-dark/10 to-primary-dark/5',
	advisor: 'from-primary-light/20 to-primary-light/10',
};

const titleColorMap = {
	staff: 'text-primary',
	board: 'text-primary-dark',
	advisor: 'text-primary',
};
---

<div
	class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition-shadow border border-gray-100"
>
	<div class={`aspect-square bg-gradient-to-br ${gradientMap[variant]} overflow-hidden`}>
		<img src={image} alt={name} class="w-full h-full object-cover" loading="lazy" />
	</div>
	<div class="p-6">
		<h3 class={`${variant === 'staff' ? 'text-xl' : 'text-lg'} font-bold text-gray-900 mb-1`}>
			{name}
		</h3>
		<p
			class={`${titleColorMap[variant]} font-semibold ${variant === 'staff' ? 'mb-3' : 'text-sm mb-3'}`}
		>
			{title}
		</p>
		{bio && variant === 'staff' && <p class="text-gray-600 text-sm leading-relaxed mb-4">{bio}</p>}
		{
			linkedin && (
				<a
					href={linkedin}
					class="inline-flex items-center gap-2 text-primary hover:text-primary-dark transition-colors text-sm font-semibold"
					aria-label={`${name}'s LinkedIn profile`}
				>
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
						<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
					</svg>
					LinkedIn
				</a>
			)
		}
	</div>
</div>
