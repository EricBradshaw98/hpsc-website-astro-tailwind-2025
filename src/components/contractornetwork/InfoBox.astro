---
export interface InfoBoxProps {
	heading: string;
	description: string;
	items: string[];
}

interface Props extends InfoBoxProps {}

const { heading, description, items } = Astro.props;

// WordPress ACF Mapping:
// ACF Group: info_box
// - heading (Text)
// - description (Textarea)
// - items (Repeater: text)
---

<section class="mb-16">
	<div class="bg-primary/5 rounded-2xl p-8 md:p-12 border-2 border-primary/20">
		<h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">{heading}</h2>
		<div class="space-y-4 text-gray-700 leading-relaxed">
			<p class="text-lg">{description}</p>
			<ul class="space-y-3 ml-6">
				{
					items.map((item) => (
						<li class="flex items-start gap-3">
							<svg
								class="w-6 h-6 text-primary flex-shrink-0 mt-0.5"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
								/>
							</svg>
							<span>{item}</span>
						</li>
					))
				}
			</ul>
		</div>
	</div>
</section>
