---
export interface BenefitCardProps {
	icon: string; // SVG path
	title: string;
	description: string;
}

interface Props extends BenefitCardProps {}

const { icon, title, description } = Astro.props;

// WordPress ACF Mapping:
// ACF Group: benefit_card
// - icon (Text - SVG path or icon name)
// - title (Text)
// - description (Textarea)
---

<div class="bg-white rounded-xl p-6 shadow-md border border-primary/20">
	<div class="flex items-start gap-4">
		<div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
			<svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
				<path d={icon}></path>
			</svg>
		</div>
		<div class="flex-1">
			<h3 class="font-bold text-gray-900 mb-1">{title}</h3>
			<p class="text-gray-600 text-sm">{description}</p>
		</div>
	</div>
</div>
