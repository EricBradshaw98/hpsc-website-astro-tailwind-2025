---
export interface InfoCardProps {
	icon: string; // SVG path
	title: string;
	description: string;
}

interface Props extends InfoCardProps {}

const { icon, title, description } = Astro.props;

// WordPress ACF Mapping:
// ACF Group: info_card
// - icon (Text - SVG path)
// - title (Text)
// - description (Textarea)
---

<div class="bg-white rounded-xl p-6 shadow-sm border border-primary/20 relative overflow-hidden">
	<!-- Background SVG -->
	<div class="absolute right-0 top-0 opacity-5 pointer-events-none">
		<svg class="w-32 h-32 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={icon} />
		</svg>
	</div>
	<!-- Content -->
	<div class="relative z-10">
		<h3 class="font-bold text-gray-900 mb-2">{title}</h3>
		<p class="text-gray-600 text-sm">{description}</p>
	</div>
</div>
