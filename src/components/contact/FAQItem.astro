---
export interface FAQItemProps {
	question: string;
	answer: string; // HTML string
}

interface Props extends FAQItemProps {}

const { question, answer } = Astro.props;
---

<details class="faq-item group bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100 hover:border-primary/30 transition-all duration-300">
	<summary
		class="flex justify-between items-center cursor-pointer p-6 font-semibold text-gray-900 hover:text-primary transition-colors list-none"
	>
		<span>{question}</span>
		<svg
			class="w-5 h-5 text-gray-500 transition-transform duration-300 ease-in-out group-open:rotate-180 flex-shrink-0 ml-4"
			fill="none"
			stroke="currentColor"
			viewBox="0 0 24 24"
			aria-hidden="true"
		>
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"
			></path>
		</svg>
	</summary>
	<div class="faq-content">
		<div class="px-6 pb-6 text-gray-600 leading-relaxed" set:html={answer} />
	</div>
</details>
