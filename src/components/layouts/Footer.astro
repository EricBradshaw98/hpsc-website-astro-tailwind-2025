<footer id="footer" class="bg-gray-900 text-gray-300">
	<div class="container mx-auto px-4 py-12 max-w-7xl">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 mb-8">
			<!-- Logo and About -->
			<div class="lg:col-span-1">
				<a href="/" class="inline-block mb-4">
					<span class="text-2xl font-bold text-white">HPSC</span>
				</a>
				<p class="text-sm leading-relaxed mb-4">Home Performance Stakeholder Council</p>
				<div class="rounded-xl overflow-hidden mt-4">
					<iframe
						src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2602.7583826237837!2d-123.12073842349324!3d49.28273097138895!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x548671817d64e9e5%3A0x3e8a7b0c5b3c9f0a!2sVancouver%2C%20BC!5e0!3m2!1sen!2sca!4v1234567890123!5m2!1sen!2sca"
						width="100%"
						height="200"
						style="border:0;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"
						title="HPSC Office Location"
						class="w-full"></iframe>
				</div>
			</div>

			<!-- Site Navigation -->
			<div>
				<h3 class="text-white font-semibold mb-4">Navigation</h3>
				<ul class="space-y-2">
					{
						footerLinks.map((link) => (
							<li>
								<a href={link.href} class="text-sm hover:text-primary transition-colors">
									{link.label}
								</a>
							</li>
						))
					}
				</ul>
			</div>

			<!-- Legal Links -->
			<div>
				<h3 class="text-white font-semibold mb-4">Legal</h3>
				<ul class="space-y-2">
					{
						legalLinks.map((link) => (
							<li>
								<a href={link.href} class="text-sm hover:text-primary transition-colors">
									{link.label}
								</a>
							</li>
						))
					}
				</ul>
			</div>

			<!-- Policies -->
			<div>
				<h3 class="text-white font-semibold mb-4">Policies</h3>
				<ul class="space-y-2">
					{
						policyLinks.map((link) => (
							<li>
								<a href={link.href} class="text-sm hover:text-primary transition-colors">
									{link.label}
								</a>
							</li>
						))
					}
				</ul>
			</div>

			<!-- Social Media -->
			<div>
				<h3 class="text-white font-semibold mb-4">Follow Us</h3>
				<div class="flex gap-4">
					{
						socialLinks.map((social) => (
							<a
								href={social.href}
								target="_blank"
								rel="noopener noreferrer"
								class="text-gray-400 hover:text-primary transition-colors"
								aria-label={social.label}
							>
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
									<path d={social.icon} />
								</svg>
							</a>
						))
					}
				</div>
			</div>
		</div>

		<!-- Indigenous Acknowledgment -->
		<div class="border-t border-gray-800 pt-8 mb-8">
			<p class="text-sm leading-relaxed text-gray-400">
				The HPSC recognizes and acknowledges with deep appreciation the unique history, languages,
				and cultures of the 203 First Nations across British Columbia and the traditional,
				ancestral, and unceded territories on which we live, work, and play.
			</p>
		</div>

		<!-- Copyright -->
		<div class="border-t border-gray-800 pt-8 text-center">
			<p class="text-sm text-gray-400">
				Â© {currentYear} HOME PERFORMANCE STAKEHOLDER COUNCIL. ALL RIGHTS RESERVED.
			</p>
		</div>
	</div>
</footer>
