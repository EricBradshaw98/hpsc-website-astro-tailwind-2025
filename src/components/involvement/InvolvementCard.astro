---
export interface InvolvementCardProps {
	title: string;
	description: string;
	icon: string; // SVG path data
	ctaText: string;
	ctaHref: string;
	external?: boolean; // Whether link opens in new tab
}

interface Props extends InvolvementCardProps {}

const { title, description, icon, ctaText, ctaHref, external = false } = Astro.props;
---

<div
	class="bg-white rounded-2xl p-8 shadow-md hover:shadow-xl transition-shadow border-2 border-primary/20"
>
	<div class="flex items-start gap-4 mb-4">
		<div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0">
			<svg
				class="w-8 h-8 text-primary"
				fill="none"
				stroke="currentColor"
				viewBox="0 0 24 24"
				aria-hidden="true"
			>
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon}></path>
			</svg>
		</div>
		<div class="flex-1">
			<h2 class="text-2xl font-bold text-gray-900 mb-2">{title}</h2>
		</div>
	</div>
	<p class="text-gray-600 mb-6 leading-relaxed">
		{description}
	</p>
	<a
		href={ctaHref}
		target={external ? '_blank' : undefined}
		rel={external ? 'noopener noreferrer' : undefined}
		class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-lg font-semibold hover:bg-primary-dark transition-colors shadow-md hover:shadow-lg"
	>
		{ctaText}
		{
			external && (
				<svg
					class="w-4 h-4"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
					aria-hidden="true"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
					/>
				</svg>
			)
		}
		{
			!external && ctaHref.startsWith('mailto:') && (
				<svg
					class="w-4 h-4"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
					aria-hidden="true"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
					/>
				</svg>
			)
		}
	</a>
</div>
