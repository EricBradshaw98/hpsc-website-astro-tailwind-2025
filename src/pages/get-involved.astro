---
import Layout from '../layouts/Layout.astro';
import InvolvementCard, {
	type InvolvementCardProps,
} from '../components/involvement/InvolvementCard.astro';
import OpportunityCard, {
	type OpportunityCardProps,
} from '../components/involvement/OpportunityCard.astro';

const involvementOptions: InvolvementCardProps[] = [
	{
		title: 'Stay Connected',
		description:
			'Sign up for our monthly email newsletter to receive updates on industry news, events, training, and more.',
		icon: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
		ctaText: 'Sign Up',
		ctaHref: 'https://homeperformance.ca/e-news-sign-up/',
		external: true,
	},
	{
		title: 'Actively Engage',
		description:
			'Share your ideas and interact with industry stakeholders through events, discussion forums, surveys, and more.',
		icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
		ctaText: 'Join us on Guides',
		ctaHref: 'https://guides.co/register?ref=hpsc',
		external: true,
	},
	{
		title: 'Share your Expertise',
		description:
			'Join a Sector Council and help shape advocacy, training, and quality assurance for the home performance industry.',
		icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
		ctaText: 'Learn More',
		ctaHref: 'https://guides.co/g/home-performance-and-the-hpsc/209674',
		external: true,
	},
	{
		title: 'Offer Strategic Guidance',
		description:
			'Participate in the Industry Advisory Committee to help shape the strategy of the HPSC and home performance industry.',
		icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
		ctaText: 'Contact Us',
		ctaHref: 'mailto:info@homeperformance.ca',
		external: false,
	},
];

const additionalOpportunities: OpportunityCardProps[] = [
	{
		icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z',
		title: 'Attend Events & Training',
		description:
			'Participate in conferences, workshops, and training sessions to expand your knowledge and network.',
		linkText: 'View Events',
		linkHref: '/events',
	},
	{
		icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
		title: 'Become an HPCN Member',
		description:
			'Join the Home Performance Contractor Network to access exclusive benefits and recognition.',
		linkText: 'Learn More',
		linkHref: '/contractor-network',
		ariaLabel: 'Learn more about joining the Home Performance Contractor Network',
	},
	{
		icon: 'M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z',
		title: 'Share Your Feedback',
		description:
			'Help us improve by sharing your thoughts, ideas, and suggestions for the industry.',
		linkText: 'Contact Us',
		linkHref: '/contact',
	},
];
---

<Layout
	title="Get Involved | Home Performance Stakeholder Council"
	description="Join the HPSC's mission to improve home performance. Choose ways to get involved that fit your schedule and interests."
	keywords="get involved, volunteer, sector council, industry advisory, HPSC, home performance, British Columbia, stakeholder engagement"
	breadcrumbs={[{ label: 'Get Involved', href: '/get-involved' }]}
>
	<!-- Page Header -->
	<div class="mb-12">
		<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Get Involved</h1>
		<p class="text-xl text-gray-700 leading-relaxed max-w-4xl">
			Join the HPSC's mission to advance home performance across British Columbia. Whether you want
			to stay informed, actively participate, or shape industry strategy, there are many ways to
			contribute to our collective success.
		</p>
	</div>

	<!-- Why Get Involved Section -->
	<section class="mb-16">
		<div class="bg-primary/5 rounded-2xl p-8 md:p-12 border-2 border-primary/20">
			<h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">Why Get Involved with HPSC?</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<div class="flex items-start gap-4">
					<div
						class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0"
					>
						<svg
							class="w-6 h-6 text-primary"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
							aria-hidden="true"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
							></path>
						</svg>
					</div>
					<div>
						<h3 class="font-bold text-gray-900 mb-2">Network with Peers</h3>
						<p class="text-gray-600 text-sm">
							Connect with industry professionals, share knowledge, and build relationships
						</p>
					</div>
				</div>

				<div class="flex items-start gap-4">
					<div
						class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0"
					>
						<svg
							class="w-6 h-6 text-primary"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
							aria-hidden="true"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
					</div>
					<div>
						<h3 class="font-bold text-gray-900 mb-2">Shape the Industry</h3>
						<p class="text-gray-600 text-sm">
							Influence standards, training, and policies that affect home performance work
						</p>
					</div>
				</div>

				<div class="flex items-start gap-4">
					<div
						class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0"
					>
						<svg
							class="w-6 h-6 text-primary"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
							aria-hidden="true"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
					</div>
					<div>
						<h3 class="font-bold text-gray-900 mb-2">Stay Informed</h3>
						<p class="text-gray-600 text-sm">
							Access the latest industry news, training opportunities, and program updates
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Engagement Options -->
	<section class="mb-16 relative">
		<!-- Background SVG Icons -->
		<div class="absolute inset-0 overflow-hidden pointer-events-none opacity-5" aria-hidden="true">
			<svg
				class="absolute top-0 left-10 w-64 h-64 text-primary"
				fill="currentColor"
				viewBox="0 0 24 24"
			>
				<path
					d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
				></path>
			</svg>
			<svg
				class="absolute top-20 right-10 w-72 h-72 text-primary"
				fill="currentColor"
				viewBox="0 0 24 24"
			>
				<path
					d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
				></path>
			</svg>
			<svg
				class="absolute bottom-40 left-1/4 w-80 h-80 text-primary"
				fill="currentColor"
				viewBox="0 0 24 24"
			>
				<path
					d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
				></path>
			</svg>
			<svg
				class="absolute bottom-20 right-1/4 w-64 h-64 text-primary"
				fill="currentColor"
				viewBox="0 0 24 24"
			>
				<path
					d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
				></path>
			</svg>
		</div>

		<h2 class="text-3xl font-bold text-gray-900 mb-8 relative z-10">Ways to Get Involved</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8 relative z-10">
			{involvementOptions.map((option) => <InvolvementCard {...option} />)}
		</div>
	</section>

	<!-- Additional Opportunities -->
	<section class="mb-16">
		<h2 class="text-3xl font-bold text-gray-900 mb-8">Other Ways to Participate</h2>
		<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
			{additionalOpportunities.map((opportunity) => <OpportunityCard {...opportunity} />)}
		</div>
	</section>

	<!-- Contractor Registration CTA -->
	<section class="mb-16">
		<div
			class="bg-gradient-to-r from-primary/10 to-primary/5 rounded-2xl p-8 md:p-12 border-2 border-primary/20"
		>
			<div class="flex flex-col md:flex-row items-center justify-between gap-6">
				<div class="flex-1">
					<h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">
						Ready to register as a quality contractor?
					</h2>
					<p class="text-gray-600 text-lg">
						Join the Home Performance Contractor Network and demonstrate your commitment to quality
						and excellence.
					</p>
				</div>
				<a
					href="https://app.registeredbccontractor.ca/profiles"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 px-8 py-3 bg-primary-dark text-white rounded-lg font-semibold hover:bg-primary-dark transition-colors shadow-md hover:shadow-lg whitespace-nowrap"
				>
					Apply Now
					<svg
						class="w-5 h-5"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
						aria-hidden="true"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
						></path>
					</svg>
				</a>
			</div>
		</div>
	</section>

	<!-- Indigenous Acknowledgment -->
	<section>
		<div
			class="p-6 md:p-8 bg-gradient-to-r from-primary/5 to-primary/10 rounded-2xl border-l-4 border-primary"
		>
			<p class="text-gray-700 leading-relaxed">
				The HPSC recognizes and acknowledges with deep appreciation the unique history, languages,
				and cultures of the 203 First Nations across British Columbia on whose territories we live,
				work, play, and learn.
			</p>
		</div>
	</section>
</Layout>
