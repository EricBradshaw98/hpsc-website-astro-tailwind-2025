---
import Layout from '../layouts/Layout.astro';
import PopularLinkCard, { type PopularLinkCardProps } from '../components/errors/PopularLinkCard.astro';

const popularLinks: PopularLinkCardProps[] = [
	{
		href: '/contractor-network',
		icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
		title: 'Contractor Network',
		description: 'Find certified contractors',
	},
	{
		href: '/resources/guides',
		icon: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
		title: 'Resources & Guides',
		description: 'Industry resources',
	},
	{
		href: '/about',
		icon: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
		title: 'About HPSC',
		description: 'Learn more about us',
	},
	{
		href: '/resources/news',
		icon: 'M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H15',
		title: 'News & Updates',
		description: 'Latest announcements',
	},
];
---

<Layout
	title="404 - Page Not Found | Home Performance Stakeholder Council"
	description="The page you're looking for cannot be found. Return to the HPSC homepage or use our search to find what you need."
	keywords="page not found, 404 error, HPSC website"
	robots="noindex, nofollow"
>
	<div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
		<!-- 404 Illustration -->
		<div class="mb-8">
			<div class="relative">
				<!-- Large 404 Number -->
				<h1
					class="text-9xl md:text-[200px] font-bold text-primary/10 select-none"
					aria-hidden="true"
				>
					404
				</h1>
				<!-- Icon overlay -->
				<div class="absolute inset-0 flex items-center justify-center">
					<svg
						class="w-24 h-24 md:w-32 md:h-32 text-primary"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
						aria-hidden="true"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
						></path>
					</svg>
				</div>
			</div>
		</div>

		<!-- Error Message -->
		<div class="max-w-2xl mb-8">
			<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Page Not Found</h2>
			<p class="text-lg text-gray-600 mb-2">
				Sorry, we couldn't find the page you're looking for. It might have been moved, deleted, or
				never existed.
			</p>
			<p class="text-base text-gray-500">Don't worry, we'll help you get back on track.</p>
		</div>

		<!-- Action Buttons -->
		<div class="flex flex-wrap gap-4 justify-center mb-12">
			<a
				href="/"
				class="inline-flex items-center gap-2 px-8 py-3 bg-primary text-white rounded-lg font-semibold hover:bg-primary-dark transition-colors shadow-md hover:shadow-lg"
			>
				<svg
					class="w-5 h-5"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
					aria-hidden="true"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
					></path>
				</svg>
				Back to Home
			</a>
			<a
				href="/search"
				class="inline-flex items-center gap-2 px-8 py-3 border-2 border-primary text-primary rounded-lg font-semibold hover:bg-primary/5 transition-colors"
			>
				<svg
					class="w-5 h-5"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
					aria-hidden="true"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
				</svg>
				Search Site
			</a>
			<a
				href="/contact"
				class="inline-flex items-center gap-2 px-8 py-3 border-2 border-gray-300 text-gray-700 rounded-lg font-semibold hover:bg-gray-50 transition-colors"
			>
				<svg
					class="w-5 h-5"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
					aria-hidden="true"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
					></path>
				</svg>
				Contact Us
			</a>
		</div>

		<!-- Popular Links -->
		<div class="max-w-3xl w-full">
			<div class="bg-gray-50 rounded-2xl p-8 border border-gray-200">
				<h3 class="text-xl font-bold text-gray-900 mb-4 text-center">Popular Pages</h3>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
					{popularLinks.map((link) => <PopularLinkCard {...link} />)}
				</div>
			</div>
		</div>

		<!-- Help Text -->
		<p class="mt-8 text-sm text-gray-500">
			If you believe this is an error, please
			<a href="/contact" class="text-primary hover:underline font-medium">contact us</a>
			and let us know.
		</p>
	</div>
</Layout>
