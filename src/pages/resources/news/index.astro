---
import Layout from '../../../layouts/Layout.astro';
import Breadcrumbs from '../../../components/layouts/Breadcrumbs.astro';

// Mock news data - this would eventually come from a CMS or API
const newsArticles = [
	{
		id: 1,
		title: 'HPSC Launches New Contractor Certification Program',
		excerpt:
			'We are excited to announce the launch of our comprehensive certification program designed to elevate standards in the home performance industry.',
		image: 'https://images.unsplash.com/photo-1560518883-ce09059eeffa?w=800&h=600&fit=crop',
		date: '2025-09-15',
		category: 'Training',
		author: 'HPSC Team',
	},
	{
		id: 2,
		title: 'New Energy Efficiency Rebates Available for Homeowners',
		excerpt:
			'CleanBC and BC Hydro have expanded their rebate programs, making energy-efficient upgrades more accessible than ever.',
		image: 'https://images.unsplash.com/photo-1582268611958-ebfd161ef9cf?w=800&h=600&fit=crop',
		date: '2025-09-10',
		category: 'Rebates',
		author: 'Policy Team',
	},
	{
		id: 3,
		title: 'Heat Pump Technology Advances: What Contractors Need to Know',
		excerpt:
			'Recent developments in heat pump efficiency and cold-climate performance are changing the retrofit landscape.',
		image: 'https://images.unsplash.com/photo-1581092918056-0c4c3acd3789?w=800&h=600&fit=crop',
		date: '2025-09-05',
		category: 'Resources',
		author: 'Technical Team',
	},
	{
		id: 4,
		title: 'HPSC Annual Conference 2025: Registration Now Open',
		excerpt:
			'Join us for three days of learning, networking, and innovation in the residential retrofit industry.',
		image: 'https://images.unsplash.com/photo-1540575467063-178a50c2df87?w=800&h=600&fit=crop',
		date: '2025-08-28',
		category: 'Events',
		author: 'Events Team',
	},
	{
		id: 5,
		title: 'Building Code Updates Impact Home Performance Standards',
		excerpt:
			'Understanding the latest BC Building Code changes and their implications for retrofit projects.',
		image: 'https://images.unsplash.com/photo-1503387762-592deb58ef4e?w=800&h=600&fit=crop',
		date: '2025-08-20',
		category: 'Policy',
		author: 'HPSC Team',
	},
	{
