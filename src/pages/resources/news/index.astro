// Extract unique categories
const categories = ['All', ...new Set(newsArticles.map((article) => article.category))];

// Get recent months for archive
const getArchiveMonths = () => {
	const months = new Set();
	newsArticles.forEach((article) => {
		const date = new Date(article.date);
		const monthYear = `${date.toLocaleString('default', { month: 'long' })} ${date.getFullYear()}`;
		months.add(monthYear);
	});
	return Array.from(months);
};

const archiveMonths = getArchiveMonths();
---

<Layout
	title="News & Updates | Home Performance Stakeholder Council"
	description="Stay informed with the latest news, updates, and insights from the home performance industry in British Columbia."
	keywords="home performance news, energy efficiency updates, BC retrofit news, HPSC updates, contractor news, energy advisor updates"
	breadcrumbs={[
		{ label: 'Resources', href: '/resources' },
		{ label: 'News & Updates', href: '/resources/news' },
	]}
>
	<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
		<!-- Main Content -->
		<div class="lg:col-span-2">
			<!-- Page Header -->
			<div class="mb-8">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">News & Updates</h1>
				<p class="text-lg text-gray-600">
					Stay informed with the latest news, updates, and insights from the home performance
					industry.
				</p>
			</div>

			<!-- Filter Buttons -->
			<div class="mb-8 flex flex-wrap gap-2" id="category-filters">
				{
					categories.map((category) => (
						<button
							data-category={category}
							class={`filter-btn px-4 py-2 rounded-full text-sm font-medium transition-all ${
								category === 'All'
									? 'bg-primary-dark text-white'
									: 'bg-gray-100 text-gray-700 hover:bg-gray-200'
							}`}
						>
							{category}
						</button>
					))
				}
			</div>

			<!-- News Grid -->
			<div class="space-y-8" id="news-grid">
				{newsArticles.map((article) => <NewsArticleCard {...article} />)}
			</div>

			<!-- Pagination -->
			<div class="mt-12 flex justify-center items-center gap-4" id="pagination">
				<button
					id="prev-btn"
					class="px-4 py-2 rounded-lg bg-gray-100 text-gray-400 cursor-not-allowed"
					disabled
				>
					← Previous
				</button>
				<div class="flex gap-2" id="page-numbers"></div>
				<button
					id="next-btn"
					class="px-4 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200"
				>
					Next →
				</button>
			</div>
		</div>

		<!-- Sidebar -->
		<aside class="lg:col-span-1">
			<!-- Newsletter Signup -->
			<div class="bg-gradient-to-br from-primary to-primary-dark rounded-2xl p-6 text-white mb-8">
				<h3 class="text-2xl font-bold mb-3">Monthly Newsletter</h3>
				<p class="mb-4 text-white/90">
					Get industry updates, training opportunities, and exclusive insights delivered to your
					inbox.
				</p>
				<form class="space-y-3">
					<label for="newsletter-email-news" class="sr-only">Email address</label>
					<input
						id="newsletter-email-news"
						type="email"
						name="email"
						placeholder="Your email address"
						class="w-full px-4 py-2 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-white"
						required
						aria-label="Email address for newsletter subscription"
					/>
					<button
						type="submit"
						class="w-full bg-white text-primary font-semibold px-4 py-2 rounded-lg hover:bg-gray-100 transition-colors"
					>
						Subscribe
					</button>
				</form>
			</div>

			<!-- Search -->
			<div class="bg-white rounded-2xl shadow-md p-6 mb-8">
				<h3 class="text-xl font-bold text-gray-900 mb-4">Search News</h3>
				<form action="/resources/news/search" method="get" class="relative">
					<label for="search-news" class="sr-only">Search news articles</label>
					<input
						id="search-news"
						type="search"
						name="q"
						placeholder="Search articles..."
						class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
						aria-label="Search news articles"
					/>
					<button type="submit" class="sr-only">Search</button>
					<svg
						class="w-5 h-5 absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
						aria-hidden="true"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
					</svg>
				</form>
			</div>

			<!-- Recent Posts -->
			<div class="bg-white rounded-2xl shadow-md p-6 mb-8">
				<h3 class="text-xl font-bold text-gray-900 mb-4">Recent Posts</h3>
				<ul class="space-y-4">
					{
						newsArticles.slice(0, 5).map((article) => (
							<li>
								<a href={`/resources/news/${article.slug}`} class="block group">
									<h4 class="text-sm font-semibold text-gray-900 group-hover:text-primary transition-colors mb-1">
										{article.title}
									</h4>
									<time class="text-xs text-gray-500">
										{new Date(article.date).toLocaleDateString('en-US', {
											month: 'short',
											day: 'numeric',
											year: 'numeric',
										})}
									</time>
								</a>
							</li>
						))
					}
				</ul>
			</div>

			<!-- Archives -->
			<div class="bg-white rounded-2xl shadow-md p-6 mb-8">
				<h3 class="text-xl font-bold text-gray-900 mb-4">Archives</h3>
				<ul class="space-y-2">
					{
						archiveMonths.map((month) => (
							<li>
								<a
									href={`/resources/news/archive/${month.toLowerCase().replace(' ', '-')}`}
									class="text-gray-700 hover:text-primary transition-colors flex items-center justify-between"
								>
									<span>{month}</span>
									<svg
										class="w-4 h-4"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
										aria-hidden="true"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M9 5l7 7-7 7"
										/>
									</svg>
								</a>
							</li>
						))
					}
				</ul>
			</div>

			<!-- Categories -->
			<div class="bg-white rounded-2xl shadow-md p-6">
				<h3 class="text-xl font-bold text-gray-900 mb-4">Categories</h3>
				<ul class="space-y-2">
					{
						categories.slice(1).map((category) => {
							const count = newsArticles.filter((a) => a.category === category).length;
							return (
								<li>
									<button
										data-category={category}
										class="sidebar-category-btn w-full text-left text-gray-700 hover:text-primary transition-colors flex items-center justify-between"
									>
										<span>{category}</span>
										<span class="text-sm bg-gray-100 px-2 py-1 rounded-full">{count}</span>
									</button>
								</li>
							);
						})
					}
				</ul>
			</div>
		</aside>
	</div>
</Layout>

<script>
	// Filter functionality
	const filterButtons = document.querySelectorAll('.filter-btn');
	const sidebarCategoryButtons = document.querySelectorAll('.sidebar-category-btn');
	const newsArticles = document.querySelectorAll('.news-article');

	function filterArticles(category: string) {
		newsArticles.forEach((article) => {
			const articleCategory = article.getAttribute('data-category');
			if (category === 'All' || articleCategory === category) {
				article.classList.remove('hidden');
			} else {
				article.classList.add('hidden');
			}
		});

		// Update button styles
		filterButtons.forEach((btn) => {
			const btnCategory = btn.getAttribute('data-category');
			if (btnCategory === category) {
				btn.classList.remove('bg-gray-100', 'text-gray-700', 'hover:bg-gray-200');
				btn.classList.add('bg-primary-dark', 'text-white');
			} else {
				btn.classList.remove('bg-primary-dark', 'text-white');
				btn.classList.add('bg-gray-100', 'text-gray-700', 'hover:bg-gray-200');
			}
		});
	}

	// Pagination functionality
	const articlesPerPage = 4;
	let currentPage = 1;
	let filteredArticles: Element[] = Array.from(newsArticles);

	function updatePagination() {
		// Get currently visible articles
		filteredArticles = Array.from(newsArticles).filter(
			(article) => !article.classList.contains('hidden')
		);

		const totalPages = Math.ceil(filteredArticles.length / articlesPerPage);

		// Show/hide articles based on current page
		filteredArticles.forEach((article, index) => {
			const startIndex = (currentPage - 1) * articlesPerPage;
			const endIndex = currentPage * articlesPerPage;

			if (index >= startIndex && index < endIndex) {
				article.classList.remove('pagination-hidden');
			} else {
				article.classList.add('pagination-hidden');
			}
		});

		// Update prev button
		const prevBtn = document.getElementById('prev-btn');
		if (prevBtn) {
			if (currentPage === 1) {
				prevBtn.classList.add('cursor-not-allowed', 'text-gray-400');
				prevBtn.classList.remove('hover:bg-gray-200', 'text-gray-700');
				prevBtn.setAttribute('disabled', 'true');
			} else {
				prevBtn.classList.remove('cursor-not-allowed', 'text-gray-400');
				prevBtn.classList.add('hover:bg-gray-200', 'text-gray-700');
				prevBtn.removeAttribute('disabled');
			}
		}

		// Update next button
		const nextBtn = document.getElementById('next-btn');
		if (nextBtn) {
			if (currentPage === totalPages) {
				nextBtn.classList.add('cursor-not-allowed', 'text-gray-400');
				nextBtn.classList.remove('hover:bg-gray-200', 'text-gray-700');
				nextBtn.setAttribute('disabled', 'true');
			} else {
				nextBtn.classList.remove('cursor-not-allowed', 'text-gray-400');
				nextBtn.classList.add('hover:bg-gray-200', 'text-gray-700');
				nextBtn.removeAttribute('disabled');
			}
		}

		// Update page numbers
		const pageNumbersContainer = document.getElementById('page-numbers');
		if (pageNumbersContainer) {
			pageNumbersContainer.innerHTML = '';
			for (let i = 1; i <= totalPages; i++) {
				const pageBtn = document.createElement('button');
				pageBtn.textContent = i.toString();
				pageBtn.className = `px-4 py-2 rounded-lg ${
					i === currentPage
						? 'bg-primary-dark text-white'
						: 'bg-gray-100 text-gray-700 hover:bg-gray-200'
				}`;
				pageBtn.addEventListener('click', () => {
					currentPage = i;
					updatePagination();
					document.getElementById('news-grid')?.scrollIntoView({ behavior: 'smooth' });
				});
				pageNumbersContainer.appendChild(pageBtn);
			}
		}
	}

	// Add event listeners for prev/next
	document.getElementById('prev-btn')?.addEventListener('click', () => {
		if (currentPage > 1) {
			currentPage--;
			updatePagination();
			document.getElementById('news-grid')?.scrollIntoView({ behavior: 'smooth' });
		}
	});

	document.getElementById('next-btn')?.addEventListener('click', () => {
		const totalPages = Math.ceil(filteredArticles.length / articlesPerPage);
		if (currentPage < totalPages) {
			currentPage++;
			updatePagination();
			document.getElementById('news-grid')?.scrollIntoView({ behavior: 'smooth' });
		}
	});

	// Wrap filterArticles to reset pagination
	const originalFilterArticles = filterArticles;
	const filterArticlesWithPagination = function (category: string) {
		originalFilterArticles(category);
		currentPage = 1;
		updatePagination();
	};

	// Update event listeners to use wrapped function
	filterButtons.forEach((button) => {
		button.addEventListener('click', () => {
			const category = button.getAttribute('data-category') || 'All';
			filterArticlesWithPagination(category);
		});
	});

	sidebarCategoryButtons.forEach((button) => {
		button.addEventListener('click', () => {
			const category = button.getAttribute('data-category') || 'All';
			filterArticlesWithPagination(category);
			document.getElementById('news-grid')?.scrollIntoView({ behavior: 'smooth' });
		});
	});

	// Initial pagination
	updatePagination();
</script>

<style>
	.pagination-hidden {
		display: none;
	}
</style>
